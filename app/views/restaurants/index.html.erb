<h1>Restaurants</h1>


<% @restaurants.each do |restaurant| %>
  <p><%= link_to restaurant.name, restaurant_path(restaurant)%> | Category: <%= restaurant.category %></p>
  <p>Address: <%= restaurant.address%></p>
  <p>Contact: <%= restaurant.phone_number %></p>
<% end %>


<%= link_to 'Create a new Restaurant', new_restaurant_path, class: "btn btn-primary" %>
